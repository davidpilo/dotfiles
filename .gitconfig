[user]
	name = David Pilo
	email = davidpilo@gmail.com
[core]
	excludesfile = /Users/davidpilo/.gitignore
[merge]
	tool = vimdiff
[alias]
	co = checkout
	br = branch
	ci = commit
  st = status
  la = log --pretty=format:"%h - %an, %ar : %s"
[color]
   branch = auto
   diff = auto
   status = auto
[color "branch"]
   current = yellow reverse
   local = yellow
   remote = green
[color "diff"]
   meta = yellow bold
   frag = magenta bold
   old = red
   new = cyan
[color "status"]
   added = yellow
   changed = green
   untracked = cyan
